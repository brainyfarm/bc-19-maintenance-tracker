doctype html
html
  head
    title= title
    link(rel="stylesheet" href="/bower_components/material-design-lite/material.min.css")
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="/bower_components/material-design-lite/material.min.js")
  body
 
    // Always shows a header, even in smaller screens.
    .mdl-layout.mdl-js-layout.mdl-layout--fixed-header
      header.mdl-layout__header
        .mdl-layout__header-row
          
          span.mdl-layout-title= title
          
          .mdl-layout-spacer
          
          nav.app-navigation__top.mdl-navigation.mdl-layout--large-screen-only
            a.mdl-navigation__link(href='/') Home
            if user
              a.mdl-navigation__link(href='/dash') Dashboard
              a.mdl-navigation__link(href='/requests') Requests
              a.mdl-navigation__link(href='/auth/logout') Logout
            else
              a.mdl-navigation__link(href='/login') Login
              a.mdl-navigation__link(href='/signup') Signup

      .mdl-layout__drawer
        span.mdl-layout-title Tracker App
        nav.mdl-navigation
          a.mdl-navigation__link(href='/') Home
          if user
            a.mdl-navigation__link(href='/dash') Dashboard
            a.mdl-navigation__link(href='/requests') Requests
            a.mdl-navigation__link(href='/auth/logout') Logout
          else
            a.mdl-navigation__link(href='/login') Login
            a.mdl-navigation__link(href='/signup') Signup
      main.mdl-layout__content
        .page-content
          
          block content

          footer.mdl-mini-footer
            .mdl-mini-footer__left-section
              .mdl-logo Title
              ul.mdl-mini-footer__link-list
                li
                  a(href='#') Help
                li
                  a(href='#') Privacy & Terms
